/* Function checks if passed strings (str1 and str2) are rotations of each other */

#include<iostream>
#include<string.h>

using namespace std;
int areRotations(char *str1, char *str2, size_t m, size_t n)
{
    char *temp;
    void *ptr;
    temp=(char*)malloc(sizeof(char)*(m*2+1));
    temp[0]='\0';
    strcat(temp, str1);
    strcat(temp,str1);
    ptr=strstr(temp,str2);
    free(temp);
    
    if(ptr!=NULL)
    {
        return 1;
    }
    else
    {
        return 0;
    }
}

int main()
{
    char str1[] = "ABE";
    char str2[] = "BEA";
    if(areRotations(str1, str2, strlen(str1), strlen(str2)))
    {
        cout<<"Strings are rotations";
    }
    else
    {
        cout<<"Not rotations";
    }
    cout<<"\n";
    return 0;
}
